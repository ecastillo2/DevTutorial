@model List<DevTutorialWebApp.Models.Roadmap>
@{
    ViewData["Title"] = "Mobile Development";
}

<div class="container mt-4">
    <div class="row mb-5">
        <div class="col-lg-8">
            <h1 class="display-4">Mobile Development</h1>
            <p class="lead">Create native and cross-platform mobile applications for iOS and Android.</p>
        </div>
    </div>

    <div class="row">
        @foreach (var roadmap in Model)
        {
            <partial name="_RoadmapCard" model="roadmap" />
        }
    </div>
</div>