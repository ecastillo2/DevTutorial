@model List<DevTutorialWebApp.Models.Roadmap>
@{
    ViewData["Title"] = "Architecture & System Design";
}

<div class="container mt-4">
    <div class="row mb-5">
        <div class="col-lg-8">
            <h1 class="display-4">Architecture & System Design</h1>
            <p class="lead">Design scalable, maintainable, and robust software systems using proven architectural patterns and principles.</p>
        </div>
    </div>

    <div class="row">
        @foreach (var roadmap in Model)
        {
            <partial name="_RoadmapCard" model="roadmap" />
        }
    </div>
</div>