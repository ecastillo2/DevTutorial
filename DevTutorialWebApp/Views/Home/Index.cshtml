@{
    ViewData["Title"] = "Home";
}

<div class="main-container">
    <div class="hero-section">
        <h1 class="hero-title">TechPath Professional</h1>
        <p class="hero-subtitle">Your comprehensive guide to mastering modern technology careers</p>
        
        <div class="container mt-5">
            <div class="row g-4">
                <div class="col-md-6 col-lg-4">
                    <div class="category-card fade-in">
                        <div class="category-icon">
                            <i class="bi bi-code-slash text-gradient"></i>
                        </div>
                        <h3 class="category-title">Web Development</h3>
                        <p class="category-description">Master modern web technologies from frontend to backend development</p>
                        <a asp-controller="WebDevelopment" asp-action="Index" class="btn btn-primary">
                            Explore <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="category-card fade-in">
                        <div class="category-icon">
                            <i class="bi bi-phone text-gradient"></i>
                        </div>
                        <h3 class="category-title">Mobile Development</h3>
                        <p class="category-description">Create native and cross-platform mobile applications</p>
                        <a asp-controller="Mobile" asp-action="Index" class="btn btn-primary">
                            Explore <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="category-card fade-in">
                        <div class="category-icon">
                            <i class="bi bi-graph-up text-gradient"></i>
                        </div>
                        <h3 class="category-title">Data Science & AI</h3>
                        <p class="category-description">Unlock insights from data and build intelligent systems</p>
                        <a asp-controller="DataScience" asp-action="Index" class="btn btn-primary">
                            Explore <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="category-card fade-in">
                        <div class="category-icon">
                            <i class="bi bi-cloud text-gradient"></i>
                        </div>
                        <h3 class="category-title">DevOps & Cloud</h3>
                        <p class="category-description">Automate deployment and manage cloud infrastructure</p>
                        <a asp-controller="DevOps" asp-action="Index" class="btn btn-primary">
                            Explore <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="category-card fade-in">
                        <div class="category-icon">
                            <i class="bi bi-star text-gradient"></i>
                        </div>
                        <h3 class="category-title">Specialized Careers</h3>
                        <p class="category-description">Explore unique tech career paths and specializations</p>
                        <a asp-controller="Specialized" asp-action="Index" class="btn btn-primary">
                            Explore <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="category-card fade-in">
                        <div class="category-icon">
                            <i class="bi bi-code-square text-gradient"></i>
                        </div>
                        <h3 class="category-title">Programming Fundamentals</h3>
                        <p class="category-description">Master algorithms, data structures, and problem-solving</p>
                        <a asp-controller="ProgrammingFundamentals" asp-action="Index" class="btn btn-primary">
                            Explore <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="category-card fade-in">
                        <div class="category-icon">
                            <i class="bi bi-check2-circle text-gradient"></i>
                        </div>
                        <h3 class="category-title">Testing & QA</h3>
                        <p class="category-description">Build reliable software through comprehensive testing</p>
                        <a asp-controller="Testing" asp-action="Index" class="btn btn-primary">
                            Explore <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="category-card fade-in">
                        <div class="category-icon">
                            <i class="bi bi-building text-gradient"></i>
                        </div>
                        <h3 class="category-title">Architecture & Design</h3>
                        <p class="category-description">Design scalable and maintainable software systems</p>
                        <a asp-controller="Architecture" asp-action="Index" class="btn btn-primary">
                            Explore <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-5 pt-5">
        <h2 class="text-gradient text-center mb-5">Why Choose TechPath Professional?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center fade-in">
                    <i class="bi bi-compass display-4 text-gradient mb-3"></i>
                    <h5 class="text-primary">Structured Learning Paths</h5>
                    <p class="text-secondary">Clear roadmaps with step-by-step guidance for each career path</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center fade-in">
                    <i class="bi bi-book display-4 text-gradient mb-3"></i>
                    <h5 class="text-primary">Curated Resources</h5>
                    <p class="text-secondary">Hand-picked learning materials from the best sources</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center fade-in">
                    <i class="bi bi-check2-circle display-4 text-gradient mb-3"></i>
                    <h5 class="text-primary">Track Your Progress</h5>
                    <p class="text-secondary">Monitor your learning journey and celebrate milestones</p>
                </div>
            </div>
        </div>
    </div>
</div>