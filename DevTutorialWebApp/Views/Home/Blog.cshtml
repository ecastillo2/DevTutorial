<style>
    .blog-post {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 2rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .blog-post:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .featured-post {
        border-left: 4px solid var(--primary-color);
        background: linear-gradient(135deg, rgba(79, 209, 197, 0.05), rgba(79, 172, 254, 0.05));
    }

    .post-title {
        color: var(--text-primary);
        text-decoration: none;
        font-weight: 600;
    }

    .post-title:hover {
        color: var(--primary-color);
    }

    .post-meta {
        color: var(--text-secondary);
        font-size: 0.875rem;
        margin: 0.5rem 0;
    }

    .post-meta span {
        margin-right: 1rem;
    }

    .post-image {
        margin-bottom: 1rem;
    }

    .placeholder-image {
        background-color: rgba(79, 209, 197, 0.1);
        border-radius: 8px;
        height: 120px;
    }

    .blog-sidebar .sidebar-widget {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .widget-title {
        color: var(--primary-color);
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .category-list {
        list-style: none;
        padding: 0;
    }

    .category-list li {
        margin-bottom: 0.5rem;
    }

    .category-list a {
        color: var(--text-secondary);
        text-decoration: none;
        display: flex;
        align-items: center;
    }

    .category-list a:hover {
        color: var(--primary-color);
    }

    .popular-post {
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .popular-post:last-child {
        border-bottom: none;
    }

    .popular-post h6 a {
        color: var(--text-primary);
        text-decoration: none;
        font-size: 0.9rem;
    }

    .popular-post h6 a:hover {
        color: var(--primary-color);
    }

    @@media (max-width: 768px) {
        .post-image {
            margin-bottom: 1rem;
        }
        
        .placeholder-image {
            height: 80px;
        }
    }
</style>