@model DevTutorialWebApp.Models.Roadmap

<div class="roadmap-card fade-in">
    <div class="roadmap-header">
        <span class="roadmap-icon">@Model.Icon</span>
        <div>
            <h3 class="roadmap-title">@Model.Title</h3>
        </div>
    </div>
    <p class="category-description">@Model.Description</p>
    <div class="roadmap-meta">
        <span><i class="bi bi-clock"></i> @Model.Duration</span>
        <span><i class="bi bi-bar-chart"></i> @Model.Difficulty</span>
        <span><i class="bi bi-list-check"></i> @Model.Steps.Count modules</span>
    </div>
    <a asp-action="@Model.Title.Replace(" ", "").Replace("/", "")" 
       asp-controller="@Model.Category.Replace(" ", "").Replace("&", "").Replace("/", "")" 
       class="btn btn-primary w-100 mt-3">
        View Roadmap <i class="bi bi-arrow-right"></i>
    </a>
</div>