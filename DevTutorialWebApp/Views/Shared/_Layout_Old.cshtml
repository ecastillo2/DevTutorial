<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - .NET Azure Developer Hub</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DevTutorialWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-microsoft me-2"></i>
                    <span class="text-gradient">.NET Azure Hub</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Blog">Blog</a>
                        </li>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dataDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Data & AI
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dataDropdown">
                                <li><a class="dropdown-item" asp-controller="DataScience" asp-action="Index">View All</a></li>
                                <li><hr class="dropdown-divider" style="border-color: var(--border-color);"></li>
                                <li><a class="dropdown-item" asp-controller="DataScience" asp-action="DataScientist">
                                    <i class="bi bi-bar-chart me-2"></i>Data Scientist
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="DataScience" asp-action="AIEngineer">
                                    <i class="bi bi-robot me-2"></i>AI/ML Engineer
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="devOpsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                DevOps & Cloud
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="devOpsDropdown">
                                <li><a class="dropdown-item" asp-controller="DevOps" asp-action="Index">View All</a></li>
                                <li><hr class="dropdown-divider" style="border-color: var(--border-color);"></li>
                                <li><a class="dropdown-item" asp-controller="DevOps" asp-action="DevOpsEngineer">
                                    <i class="bi bi-tools me-2"></i>DevOps Engineer
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="DevOps" asp-action="CloudSolutionsArchitect">
                                    <i class="bi bi-cloud-fill me-2"></i>Cloud Solutions Architect
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="specializedDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Specialized
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="specializedDropdown">
                                <li><a class="dropdown-item" asp-controller="Specialized" asp-action="Index">View All</a></li>
                                <li><hr class="dropdown-divider" style="border-color: var(--border-color);"></li>
                                <li><a class="dropdown-item" asp-controller="Specialized" asp-action="Cybersecurity">
                                    <i class="bi bi-shield-lock me-2"></i>Cybersecurity Specialist
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Specialized" asp-action="UXUIDesigner">
                                    <i class="bi bi-brush me-2"></i>UX/UI Designer
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Specialized" asp-action="ProductManager">
                                    <i class="bi bi-briefcase me-2"></i>Product Manager
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="fundamentalsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Programming
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="fundamentalsDropdown">
                                <li><a class="dropdown-item" asp-controller="ProgrammingFundamentals" asp-action="Index">View All</a></li>
                                <li><hr class="dropdown-divider" style="border-color: var(--border-color);"></li>
                                <li><a class="dropdown-item" asp-controller="ProgrammingFundamentals" asp-action="AlgorithmsDataStructures">
                                    <i class="bi bi-diagram-3 me-2"></i>Algorithms & Data Structures
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="ProgrammingFundamentals" asp-action="ProblemSolvingCodingInterviews">
                                    <i class="bi bi-puzzle me-2"></i>Problem Solving
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="testingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Testing
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="testingDropdown">
                                <li><a class="dropdown-item" asp-controller="Testing" asp-action="Index">View All</a></li>
                                <li><hr class="dropdown-divider" style="border-color: var(--border-color);"></li>
                                <li><a class="dropdown-item" asp-controller="Testing" asp-action="UnitTestingTDD">
                                    <i class="bi bi-check2-square me-2"></i>Unit Testing & TDD
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Testing" asp-action="IntegrationAPITesting">
                                    <i class="bi bi-plug me-2"></i>Integration & API Testing
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="architectureDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Architecture
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="architectureDropdown">
                                <li><a class="dropdown-item" asp-controller="Architecture" asp-action="Index">View All</a></li>
                                <li><hr class="dropdown-divider" style="border-color: var(--border-color);"></li>
                                <li><a class="dropdown-item" asp-controller="Architecture" asp-action="SoftwareArchitecturePatterns">
                                    <i class="bi bi-building me-2"></i>Architecture Patterns
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Architecture" asp-action="MicroservicesArchitecture">
                                    <i class="bi bi-boxes me-2"></i>Microservices
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Architecture" asp-action="DomainDrivenDesign">
                                    <i class="bi bi-layers me-2"></i>Domain-Driven Design
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Interview" asp-action="Index">
                                <i class="bi bi-mortarboard me-1"></i>Interview Prep
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Challenges" asp-action="Index">
                                <i class="bi bi-puzzle me-1"></i>Challenges
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Resources" asp-action="Index">
                                <i class="bi bi-book me-1"></i>Resources
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
